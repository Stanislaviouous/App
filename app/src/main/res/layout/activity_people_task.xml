<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.PeopleTask">

    <TextView
            android:text="Опишите:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewRot"
            android:textSize="18sp"
            android:textColor="#FFFFFF" android:textColorHighlight="#194277"
            android:textColorHint="#194277" android:textColorLink="#194277" android:background="#194277"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewrt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"/>
    <TextView
            android:text="Доказательства:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewRot2rt"
            android:textSize="18sp"
            android:textColor="#FFFFFF" android:textColorHighlight="#194277"
            android:textColorHint="#194277" android:textColorLink="#194277" android:background="#194277"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="Подтверждение"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewrt"
            android:gravity="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="4dp" android:layout_marginTop="4dp" android:layout_marginStart="4dp"/>
    <EditText
            android:inputType="textMultiLine"
            android:lines="6"
            android:minLines="3"
            android:gravity="top|left"
            android:maxLines="8"
            android:scrollbars="vertical"
            android:layout_width="0dp"
            android:layout_height="107dp"
            android:id="@+id/editText2"
            app:layout_constraintTop_toTopOf="@+id/textViewRot" app:layout_constraintStart_toEndOf="@+id/textViewRot"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            android:textColorHighlight="#194277" android:textColorHint="#194277" android:textColorLink="#194277"
            android:textSize="18sp"/>
    <ImageView
            android:layout_width="58dp"
            android:layout_height="64dp" app:srcCompat="@drawable/ic_add_artboard_icon_188495"
            android:id="@+id/doc"
            app:layout_constraintStart_toEndOf="@+id/textViewRot2rt"
            android:layout_marginStart="4dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_icons8_round"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/doc"
            android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="@+id/textViewRot2rt"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"/>
    <Button
            android:text="Отправить"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttont" app:layout_constraintStart_toEndOf="@+id/doc" android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:layout_marginTop="4dp" android:layout_marginEnd="4dp" android:background="@drawable/jojo"
            app:layout_constraintBottom_toBottomOf="@+id/doc" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>